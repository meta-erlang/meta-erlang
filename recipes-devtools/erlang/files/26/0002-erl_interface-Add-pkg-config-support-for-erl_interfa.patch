diff --git a/configure.src b/configure.src
index d320c4520b..0621daf45b 100644
--- a/configure.src
+++ b/configure.src
@@ -52,6 +52,7 @@ help=no
 user_srcdir=
 config_arguments=
 skip_applications=
+pkg_config=no
 while test $# != 0; do
     case $1 in
 	-srcdir=* | --srcdir=*)
@@ -148,7 +149,10 @@ while test $# != 0; do
         flgs_val=`echo "$1" | sed 's/^[^=]*=//'`
 	    eval $flgs_var=\$flgs_val
 	    ;;
-	--help=r* | -help=r*)
+        --enable-pkg-config)
+            pkg_config=yes
+            ;;
+        --help=r* | -help=r*)
 	    help=all;;
         --help* | -help* | -h)
 	    help=$1;;
@@ -316,6 +320,14 @@ else
     esac
 fi
 
+case "$pkg_config" in
+    no)
+      ;;
+    yes)
+      config_arguments="$config_arguments --enable-pkg-config"
+    ;;
+esac
+    
 config_arguments="$config_arguments --disable-option-checking"
 
 if test $bootstrap_only = no; then
